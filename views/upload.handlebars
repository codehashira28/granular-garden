<main>
    <section class="ticket-section section-padding">
        <div class="section-overlay"></div>

        <div class="container">
            <div class="row justify-content-center"> 
                <div class="col-lg-8 col-md-10 col-12"> 
                    <form class="custom-form ticket-form mb-5 mb-lg-0 login-form" action="/api/upload" method="post"
                        enctype="multipart/form-data" role="form">
                        <h2 class="text-center mb-4" id="border-bottom">Upload</h2>

                        <div class="text-center mb-2">
                            <button class="btn custom-btn d-lg-block d-none file-btn mx-auto">
                                <input type="file" id="audioFile" name="audioFile" accept="audio/*">
                                Choose File
                            </button>
                        </div>

                        <div class="text-center mb-2">
                            <h2 class="mb-4" id="border-bottom">Song Title</h2>
                            <div class="col-lg-6 col-md-6 col-12 mx-auto w-75">
                                <input type="text" id="song-title" class="form-control" required>
                            </div>
                        </div>

                        <div class="text-center mb-2">
                            <h2 class="mb-4" id="border-bottom">Creator Name</h2>
                            <div class="col-lg-6 col-md-6 col-12 mx-auto w-75">
                                <input type="text" id="creator-name" class="form-control" required>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>
