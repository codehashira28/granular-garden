<main>
    <section class="section-bg" id="feed-sect">
        <div class="container">
            <h2 class="feed" id="border-bottom">{{song.title}} by {{song.creator}}</h2>
        </div>
        <div class="container">
            <div class="container" id="track-detail-container">
                <div class="row align-items-end">
                    <div class="col image-container">
                        <a href="/{{song.creator}}/{{song.title}}">
                            <img src="{{song.coverImage}}" alt="{{song.title}}" class="cover-art">
                        </a>
                    </div>

                    <div class="col">
                        <div class="track-actions">
                            <p id="artist-name">
                                <a href="/{{creator}}">{{song.creator}}</a>
                            </p>
                            <a href="/{{creator}}/{{title}}">
                                <p class="text-black" id="song-title">{{song.title}}</p>
                            </a>
                            <button class="btn custom-btn d-lg-block d-none audio-btn" id="audio-btn"></button>
                            <div class="waveform" id="waveform"></div>
                            <audio src={{song.audioFile}}></audio>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="container">
                            <h5>Add Comment</h5>
                        </div>
                        <div class="container" id="add-comment-container">
                            <form id="comment-form" class="mb-5 mb-sm-0">
                                <textarea id="comment-box" class="comment-box" name="commentText" rows="4"
                                    placeholder="Write your comment"></textarea>
                                <button class="btn custom-btn d-lg-block d-none comment-btn" type="submit">Submit
                                    Comment</button>
                            </form>
                        </div>
                        <div class="container" id="comments-container">
                            <ul class="comment-list">
                                {{#each song.comments}}
                                <li class="comment">
                                    <div class="comment-body" id="comment-container">
                                        <p id="artist-name"><a class="comment-author" href="/profile/{{creator}}">{{creator}}</a></p>
                                        <p class="comment-text text-black">{{text}}</p>
                                    </div>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>