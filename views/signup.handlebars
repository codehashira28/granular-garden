<main>

    <section class="ticket-section section-padding">
        <div class="section-overlay"></div>

        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-10 mx-auto">
                    <form class="custom-form ticket-form mb-5 mb-lg-0" action="#" method="post" role="form">
                        <h2 class="text-center mb-4">Signup</h2>

                        <div class="ticket-form-body form">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <input type="text" name="ticket-form-name" id="ticket-form-name"
                                        class="form-control" placeholder="username" required>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <input type="email" name="ticket-form-email" id="ticket-form-email"
                                        pattern="[^ @]*@[^ @]*" class="form-control" placeholder="email address"
                                        required>
                                </div>
                            </div>
                        </div>
                        <div class="ticket-form-body form">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <input type="text" name="ticket-form-name" id="ticket-form-name"
                                        class="form-control" placeholder="password" required>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <input type="email" name="ticket-form-email" id="ticket-form-email"
                                        pattern="[^ @]*@[^ @]*" class="form-control" placeholder="confirm password"
                                        required>
                                </div>
                            </div>
                            <p>Already have an account? <a href="/login">Login</a></p>
                            <button class="btn custom-btn d-lg-block d-none audio-btn">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
    </section>
    
</main>